@page
@model AvangardumPersonalWebsite.Pages.Skills

@{
    var skillValues = new Dictionary<string, double>
    {
        ["General Programming"] = 0.85,
        ["C#"] = 0.9,
        ["Unity"] = 0.8,
        ["ASP.NET"] = 0.5,
        ["HTML"] = 0.5,
        ["CSS"] = 0.5,
        ["JavaScript"] = 0.3,
        ["SQL"] = 0.3,
        ["F#"] = 0.3,
        ["Lua"] = 0.8,
        ["Git"] = 0.7,
        ["Game Design"] = 0.7,
        ["Software Architecture"] = 0.5,
        ["Agile"] = 0.3,
        ["Image Editing"] = 0.3,
        ["Video Editing"] = 0.15,
    };
    ViewData["Title"] = "Skills";
}

<h1>Skills</h1>
<ul>
    @foreach (var (skill, value) in skillValues)
    {
        <li>
            <label style="width: 200px">@skill</label>
            <progress max="1" value="@value" style="position: relative; top: 3px"></progress>
        </li>
    }
</ul>
